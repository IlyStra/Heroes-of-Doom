addkeysection "Heroes of Doom - Keys" HODKeys

    // Brutal doom compatible kick
    addmenukey "Kick" kickem
    alias kickem "pukename HeroicKick"
    defaultbind Q kickem

    // Brutal doom compatible taunt
    addmenukey "Taunt" brutaltaunt
    alias brutaltaunt "pukename HeroicTaunt"
    defaultbind U brutaltaunt

    // Brutal doom compatible advanced (custom) taunt
    addmenukey "Custom taunt" advtaunt
    alias advtaunt "pukename CustomTaunt"
    defaultbind V advtaunt
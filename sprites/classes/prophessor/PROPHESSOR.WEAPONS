// Arms in the hands of PROPHESSOR

Actor ProphessorFist : Fist {
	Inventory.RestrictedTo "PROPHESSOR"
}

Actor ProphessorKick : Kick {
	Inventory.RestrictedTo "PROPHESSOR"
	Weapon.Kickback 228

	States {	
		Ready:
			KICK J 0 A_WeaponReady
			Goto Fire
		Deselect:
			KICK J 0 A_Lower
			Loop
		Select:
			KICK J 0 A_Raise
			Loop
		Fire:
			KICK K 1
			KICK L 1
			KICK M 1
			KICK N 1 A_PlaySound("weapon/kick", CHAN_5, 1.0, 0.0)
			KICK O 1
			KICK P 1 
			KICK Q 1 A_CustomPunch(11, false, 0, "BulletPuff", 64, 0, 0, "", "weapon/kickdown", "weapon/kickmiss")
			KICK R 3 A_Recoil(4)
			KICK S 1 
			KICK T 1 A_TakeInventory("ProphessorKick")
			Stop
	}
}

